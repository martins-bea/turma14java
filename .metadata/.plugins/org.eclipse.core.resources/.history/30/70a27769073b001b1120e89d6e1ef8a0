package exercicio;

import java.util.Scanner;


public class lista4exercicio1vetorEMatriz {
	
	
	public static void main(String[] args) {	
			Scanner leia = new Scanner(System.in);
			
		      int valores[]; //Guarda nas posições do vetor 
		      int maior = 0;

		      for (int i=0; i<5; i++){
		          System.out.printf("Digite o ",i+1,"º valor: ");
		          valores [i]= leia.nextInt();
		      }


		      for(int i=0; i<5; i++){
		          if(valores[i] > maior){
		              maior = valores[i];
		          }
		      }
		    System.out.println("\n");
		    System.out.printf("\n O maior número é de:",maior);

		    }

	private static void leia(int i) {
		// TODO Auto-generated method stub
		
	}



	}

}
