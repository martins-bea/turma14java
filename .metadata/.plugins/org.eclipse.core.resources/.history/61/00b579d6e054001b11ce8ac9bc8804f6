package Heranca_Polimorfismo;


	public class ProgramaMetodosAnimal extends AnimalPrincipal{ public ProgramaMetodosAnimal(String nome, int idade) {
			super(nome, idade);
		
		
		Cachorro cachorro = new Cachorro("Amora", 1);
		Cavalo cavalo = new Cavalo ("Bala-no-alvo", 1 );
		Preguica preguica = new Preguica ("Fast", 2);
		
		System.out.println("Nome do Cachorro: " + cachorro.getNome() + " faz o  barulho: " + cachorro.emitirSom());
		System.out.println("Nome do Cavalo: " + cavalo.getNome() + " faz o barulho: " + cavalo.emitirSom());
		System.out.println("Nome da Preguiça: " + preguica.getNome() + " faz o barulho: " + preguica.emitirSom());
	}

}