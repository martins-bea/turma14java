package POO;

public class Pessoa {
	
	
	//atributos
	//private significa que só a classe Pessoa pode altera-los 
	private String primeiroNome;
	private String ultimoNome;
	private String nomeMeio; 
	

	//construtor sempre carrega o mesmo nome da classe
	//construtor sempre sera o nome da classe seguido pelos parametros dos atributos 
	//nao criam nem retornam objetos, quem faz isso é new que cria objeto, o construtor so executa o procedimento
	public Pessoa (String primeiro, String meio, String ultimo) {
		
		primeiroNome=primeiro;
		ultimoNome=ultimo;
		nomeMeio=meio;
		
		}
	
	public String getNomeCompleto() {
		
	String nomeCompleto= "primeiroNome"+" "+"nomeMeio"+"ultimoNome";
	return nomeCompleto;
			
	}
	}
